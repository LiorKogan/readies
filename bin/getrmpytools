#!/bin/bash

HERE="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
ROOT=$(cd $HERE/../..; pwd)
READIES=$ROOT/readies
. $READIES/shibumi/defs

if [[ ! -z $VIRTUAL_ENV ]]; then
	MYPY=python
elif command -v python3 > /dev/null; then
	MYPY=python3
elif command -v python2 > /dev/null; then
	MYPY=python2
elif command -v python > /dev/null; then
	MYPY=python
else
	eprint "Cannot find Python"
	exit 1
fi

runn $MYPY --no-cache-dir git+https://github.com/Grokzen/redis-py-cluster.git@master
runn $MYPY --no-cache-dir git+https://github.com/RedisLabsModules/RLTest.git@master
runn $MYPY --no-cache-dir git+https://github.com/RedisLabs/RAMP@master
exit 0
